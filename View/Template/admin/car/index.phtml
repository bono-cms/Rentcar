        <div class="table-responsive">
            <?= $this->widget(new GridViewWidget($cars, array(
                'tableClass' => 'table table-hover table-bordered table-sm',
                'columns' => array(
                    array(
                        'column' => 'id',
                        'label' => '#'
                    ),

                    array(
                        'column' => 'image',
                        'value' => function($row){
                            return Element::image($row->getImageUrl('350x350'), array('class' => 'img-fluid col-5'));
                        }
                    ),

                    array(
                        'column' => 'name'
                    ),

                    array(
                        'column' => 'brand'
                    )
                ),

                'actions' => array(
                    'view' => function($row){
                        return Icon::view($row['url'], $this->translate('View this car on site'));
